@page "/"
@inject IJSRuntime JSRuntime
@using TerminalSite.Configuration;
<Window Title="Will Boulton">
    <Terminal prompt="@m" />
</Window>



@code{
    private PromptContext m = new PromptContext() { Separator = "^", CurrentDirectory = FileSystem.root, User = "admin" };



    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntime.InvokeVoidAsync("setTitle", SiteConfig.config["SiteName"]); ;
    }
}