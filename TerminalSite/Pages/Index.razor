@page "/"
@inject IJSRuntime JSRuntime
@inject IConfiguration config


@switch (currentPage)
{
    case MainLayout.MyPages.Desktop:
        <Window Title="Will Boulton">
            <Terminal />
        </Window>

        break;
    case MainLayout.MyPages.Portfolio:
        <Portfolio />
        break;

}



@code{


    [CascadingParameter] MainLayout.MyPages currentPage { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntime.InvokeVoidAsync("setTitle", config["SiteName"]); ;
    }



}